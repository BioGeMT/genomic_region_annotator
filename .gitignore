cat > .gitignore <<'EOF'
# Python
__pycache__/
*.py[cod]
*.pyd
*.so
.venv/
.env

# Conda
.conda/
conda-meta/

# Jupyter
.ipynb_checkpoints/

# VS Code
.vscode/

# Data (keep raw out of git if large)
data/annotations/*
!data/annotations/.gitkeep
data/raw/*
!data/raw/.gitkeep
data/processed/*
!data/processed/.gitkeep

# OS
.DS_Store
EOF

touch data/raw/.gitkeep data/interim/.gitkeep data/processed/.gitkeep